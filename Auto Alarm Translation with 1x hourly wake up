}


void enterSleep(){
  byte minute,hour;
  int time_now;
 set_sleep_mode(SLEEP_MODE_PWR_DOWN);   /* EDIT: could also use SLEEP_MODE_PWR_DOWN for lowest power consumption. */
  sleep_enable();
  
  /* Now enter sleep mode. */
 sleep_mode();
  
  /* The program will continue from here after the WDT timeout*/
  sleep_disable(); /* First thing to do is disable sleep. */
  
  /* Re-enable the peripherals. */
 power_all_enable();
 Time_Check(time_check);
 Serial.println("Waking up!");
 Serial.println(alarm_fired);
 delay(500); 
 displayTimeCheck();
 Wire.beginTransmission(DS3231_I2C_ADDRESS);
  Wire.write(0xF); //Open status resgister
  Wire.requestFrom(DS3231_I2C_ADDRESS, 1); //Request 1 byte from status register
  byte stat = Wire.read(); // Read current status settings from register to stat variable
  Wire.endTransmission();
  stat &= ~0x3; //stat value and not 1, Bit 0 is A1F (Alarm 1 Flag) which can only be set low
  Wire.beginTransmission(DS3231_I2C_ADDRESS);
  Wire.write(0x0F); //Open status register
  Wire.write(stat); //Write stat value to status register
  Wire.endTransmission();
 
}


void setup() {
  Wire.begin();
  Serial.begin(9600);
  // initialize the button pin as a input:
  pinMode(3, INPUT);
  pinMode(4, OUTPUT);
  myservo.attach(11); //Attach servo to pin 5
  myservo.write(100);
  //setDS3231time(02,00,13,5,15,9,16);
  Alarm_Translate(10,15,0,target_min,target_hour,1,1); //10 seconds, 15 min after the hour (0 hours), sets alarm 2 to target_min and target_hour
  Set_Alarm1_Opts(1,Alarm_Params);
  flushReceive();
  Set_Alarm2_Opts(1,Alarm_Params);
  SetBothAlarms(Alarm_Params);
  delay(1000);
  attachInterrupt(digitalPinToInterrupt(3),Alarm_Fired,CHANGE);
}


void loop() {
  displayTime();
  delay(1000);
  if(alarm_fired ==1 && time_check[0] == target_hour && time_check[1]== target_min){
    Serial.println("Alarm fired loop!");
    Wire.beginTransmission(DS3231_I2C_ADDRESS);
  Wire.write(0xF); //Open status resgister
  Wire.requestFrom(DS3231_I2C_ADDRESS, 1); //Request 1 byte from status register
  byte stat = Wire.read(); // Read current status settings from register to stat variable
  Wire.endTransmission();
  Serial.print("stat read:");
  Serial.println(stat,BIN); //Print stat variable in HEX
  
 // stat &= ~0x3; //stat value and not 1, Bit 0 is A1F (Alarm 1 Flag) which can only be set low
// Wire.beginTransmission(DS3231_I2C_ADDRESS);
 // Wire.write(0x0F); //Open status register
//  Wire.write(stat); //Write stat value to status register
 // Wire.endTransmission();
 digitalWrite(4,HIGH);
 delay(500);
 myservo.write(0);
 delay(1000);
 digitalWrite(4,LOW);
 myservo.write(100);
 delay(1000);
 alarm_fired = 0;
 }else{
  myservo.write(110);
  delay(500);
  myservo.write(100);
   Serial.println("No alarm, going to sleep...");
   delay(500);
   enterSleep();
 }
 
   
}
